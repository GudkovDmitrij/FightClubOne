<div class="hero-unit">

  <h1>
    <%= @category.name %>
  </h1>

  <div class="fotorama hero-unit"
       data-width="100%"
       data-ratio="16/9"
       data-loop="true"
       data-keyboard="true"
       data-arrows="true"
       data-swipe="true"
       data-navposition="bottom"
       data-nav="thumbs">
    <% @category.photos.each do |photo| %>

      <%= image_tag(photo.URL) %>

  <% end %>
  </div>

  <div>
    <p>управление категорией:</p>
  <%= link_to 'назад', categories_path %> |
  <%= link_to 'изменить', edit_category_path(@category) %>  |
  <%= link_to 'удалить', @category, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <br />
  <%= link_to 'управление фотографиями', category_photos_path(@category) %>
</div>